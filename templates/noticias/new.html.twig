{% extends 'default.html.twig' %}


{% block body %}
          <section>
            <div class="parallax-container breadcrumb-modern bg-gray-darkest" data-parallax-img="{{ asset('images/fotosPoli/CabeceraNoti3.jpg') }}">
              <div class="parallax-content"> 
                <div class="container section-top-98 section-bottom-34 section-lg-bottom-66 section-lg-98 section-xl-top-110 section-xl-bottom-41">
                  <h2 class="d-none d-lg-block offset-top-30" style="color:white; text-shadow: 1px 1px 2px black;"><span class="big">Noticias</span></h2>
                  <ul class="list-inline list-inline-dashed">
                    <li class="list-inline-item"><a href="index.html" style="color:white; text-shadow: 1px 1px 2px black;">Inicio</a></li>
                    <li class="list-inline-item" style="color:white; text-shadow: 1px 1px 2px black;">Noticias
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </section>
        </div>
      </header>
      <div class="container margin-container">
    <h1 >Creaci√≥n de una nueva noticia</h1>
    
        {# <!--Inicio formulario--> #}
        {{ form_start(form) }}
            <div class="form-group first">
                <label for="noticias_titulo">Titulo</label>
                {{ form_widget(form.titulo,
                {'attr': {'class': 'form-control'} }
                ) }}
            </div>
            <div class="form-group">
                <label for="noticias_descrip">Descripcion</label>
                {{ form_widget(form.descrip,
                {'attr': {'class': 'form-control'} }
                ) }}
            </div>
            <div class="form-group">
                <label for="noticias_descripExtend">Contenido</label>
                {{ form_widget(form.descripExtend,
                {'attr': {'class': 'form-control'} }
                ) }}
            </div>
            <div class="form-group ">
                <label for="noticias_imagen">Imagen</label>
                {{ form_widget(form.imagen,
                {'attr': {'class': 'form-control'} }
                ) }}
            </div>
            <div class="form-group">
                <label for="noticias_organizador">organizador</label>
                {{ form_widget(form.organizador,
                {'attr': {'class': 'form-control'} }
                ) }}
            </div>
            <div class="form-group">
                <label for="noticias_fechapublicacion">Fecha</label>
                {{ form_widget(form.fechapublicacion,
                {'attr': {'class': 'date-picker'} }
                ) }}
            </div>
        
        <button class="btn btn-block btn-primary md-12">Guardar</button>
        {{ form_end(form) }}
        <a href="{{ path('app_noticias_index') }}"><button class="btn btn-primary md-6" style="margin:2em;">Volver a la lista</button></a>
        </div>
    </div>
{% endblock %}
