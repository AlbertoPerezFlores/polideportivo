              {% if is_granted('ROLE_ADMIN')%}
            <div class="buscador">
              <div class="row">
                <div class="col-md-8">
                  <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Buscar" aria-label="Buscar" aria-describedby="basic-addon2" >
                    <div class="input-group-append">
                      <button class="btn btn-outline-secondary" type="button"><i class="fa fa-search" style="font-size:24px"></i></button>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <a type="button" class="btn btn-primary btn-block" href="{{ path('app_noticias_new') }}">Añadir nueva noticia</a>
                </div>
              </div>
            </div>
              {% else %}
            <div class="buscador">
              <div class="row">
                <div class="col-md-12">
                  <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Buscar" aria-label="Buscar" aria-describedby="basic-addon2" >
                    <div class="input-group-append">
                      <button class="btn btn-outline-secondary" type="button" ><i class="fa fa-search" style="font-size:24px"></i></button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
              {% endif %}
                
              {% for noticia in pagination %}
              {% if is_granted('ROLE_ADMIN')%}
              <div class="card mb-3 card-escuela" style="max-width: 100%; min-height: 310px;">
                <div class="row no-gutters">
                  <div class="col-md-3">
                    <img class="img-fluid img-escuela"  src="..{{ noticia.imagen }}">
                  </div>
                  <div class="col-md-7">
                    <div class="card-body text-card-escuela">
                      <h5 class="card-title">{{ noticia.titulo }}</h5>
                      <p class="card-text">{{ noticia.descrip }}
                      </p>
                        <a type="button" class="btn btn-primary btn-block leermas" href="{{ path('app_noticias_show', {'id': noticia.id}) }}">Leer más</a>
                      </div>
                  </div>
                  <div class="col-md-2">
                    <div class="card-body text-card-escuela">
                      <a type="button" class="btn btn-primary btn-block" href="{{ path('app_noticias_edit', {'id': noticia.id}) }}"><i class="fa fa-pencil" style="font-size:24px"></i></a>
                    </div>
                    <div class="card-body text-card-escuela">
                    {{ include('noticias/_delete_form.html.twig') }}
                    </div>
                </div>
              </div>
            </div>
            {% else %}
              <div class="card mb-3 card-escuela" style="max-width: 100%; min-height: 310px;">
                <div class="row no-gutters">
                  <div class="col-md-3">
                    <img class="img-fluid img-escuela" style="height: 170px; margin-left: 30px;" src="..{{ noticia.imagen }}">
                  </div>
                  <div class="col-md-8" style="margin-left: 30px;">
                    <div class="card-body text-card-escuela">
                      <h5 class="card-title">{{ noticia.titulo }}</h5>
                      <p class="card-text">{{ noticia.descrip }}
                      </p>
                        <a type="button" class="btn btn-primary btn-block leermas" href="{{ path('app_noticias_show', {'id': noticia.id}) }}">Leer má22s</a>
                      </div>
                  </div>
                </div>
              </div>
            {% endif %}
            {% else %}
                        <tr>
                            <h1 colspan="7">No hay noticias</h1>
                        </tr>
            {% endfor %}

            <div class="pagination">
              {{ knp_pagination_render(pagination) }}
            </div>
          </div>
{% endblock %}
