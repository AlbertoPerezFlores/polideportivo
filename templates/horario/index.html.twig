<div class="container">
{{ hoy|date('Y-m-d') }}
<table class="table table-sm text-center align-middle">
  <thead>
    <tr>
      <th scope="col">Hora</th>
      {% for dia in dias %}
        <th scope="col">{{ dia }}</th>
      {% endfor %}
    </tr>
  </thead>
  <tbody>
    {% for hora in horas %}
      <tr>
        <td scope="row" style="text-align: center; vertical-align: middle;">{{ hora }}</td>
        {% for dia in dias %}
          {% set actividades = horarios|filter(a => a.hora.hora|date('H:i') == hora and a.dia.dia == dia) %}
          <td>
            <div class="col-12 row aling-items-center" style="margin-left: 0; margin-right: 0;">
            {% if actividades|length > 0 %}
              {% for actividad in actividades %}
              {% set modalId = 'exampleModalCenter' ~ actividad.id %}
                {% if actividades|length == 1 %}
                <div  class="col-12 {{actividad.actividad.cssclass}}">
                  <a href="#" data-toggle="modal" data-target="{{ '#' ~ modalId }}" style="text-decoration: none; color: black;">
                    <div>
                        {{ actividad.actividad.actividad }}<br>
                        {{ actividad.sala.nombreSala }}<br>
                        {{ actividad.capacidadvar }}/{{ actividad.capacidad }}
                    </div>
                  </a>
                </div>
                {% else %}
                <div  class="col-6 {{actividad.actividad.cssclass}}">
                  <a href="#" data-toggle="modal" data-target="{{ '#' ~ modalId }}" style="text-decoration: none; color: black;">
                    <div>
                        {{ actividad.actividad.actividad }}<br>
                        {{ actividad.sala.nombreSala }}<br>
                        {{ actividad.capacidadvar }}/{{ actividad.capacidad }}
                    </div>
                  </a>
                </div>
                {% endif %}
                                  <!-- Modal -->
                  <div class="modal fade" id="{{ modalId }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="{{ modalId }}Title">Reserva de clase</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body" style="text-align: left;">
                        {% set diaTraducido = dia|trans %}
                          <p>
                            ¿Desea reservar la clase de <b>{{actividad.actividad.actividad}}</b> En la sala "<b>{{ actividad.sala.nombreSala }}</b>"<br>
                             el día <b>{{actividad.dia.dia}}</b> <b>{{fechasSemana[diaTraducido]|date('d-m-Y')}}</b> a las <b>{{actividad.hora.hora|date('H:i')}}</b>?
                          </p> 
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                          <button type="button" class="btn btn-primary">Reservar</button>
                        </div>
                      </div>
                    </div>
                  </div>
              {% endfor %}
            {% endif %}
            </div>
          </td>
        {% endfor %}
      </tr>
    {% endfor %}
  </tbody>
</table>

